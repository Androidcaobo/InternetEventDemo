<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/baseBackground"
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/tv_confirm"
            android:text="确认"
            android:textSize="20sp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:textSize="20sp"
            android:text="发布"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/boundary_2"/>

    <RelativeLayout
        android:id="@+id/rl_sign_up"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="品牌"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="新东方"/>

    </RelativeLayout>
    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/boundary_1"/>

    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/boundary_3"/>

    <RelativeLayout
        android:id="@+id/rl_sign_up1"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="型号"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="输入型号"/>

    </RelativeLayout>


    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/boundary_5"/>

    <RelativeLayout
        android:id="@+id/rl_sign_up2"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="机器数量"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="机器数量"/>

    </RelativeLayout>
    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/boundary_6"/>



    <RelativeLayout
        android:id="@+id/rl_sign_up4"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="作业时间"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="未设置"/>

    </RelativeLayout>
    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/boundary_9"/>

    <RelativeLayout
        android:id="@+id/rl_sign_up3"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="期望价格"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="未设置"/>

    </RelativeLayout>


    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/boundary_10"/>

    <RelativeLayout
        android:id="@+id/rl_sign_up5"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="联系电话"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="您的电话"/>

    </RelativeLayout>

    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/boundary_11"/>

    <RelativeLayout
        android:id="@+id/rl_sign_up6"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="地址"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="选择"/>

    </RelativeLayout>

    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/boundary_12"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="请输入详细地址"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/boundary_13"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="40dp"
        android:layout_height="0dp">



        <TextView
            android:id="@+id/tv_remark"
            android:text="备注:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/tv_remark"
            android:layout_height="30dp"/>

    </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
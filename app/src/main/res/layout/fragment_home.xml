<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent"
              android:weightSum="1">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/roll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:rollviewpager_play_delay="3000"/>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_zhaononghuo"
            android:text="找农活"
            android:drawableTop="@drawable/zhaononghuo"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_zhaonongji"
            android:text="找农活"
            android:layout_gravity="center"
            android:drawableTop="@drawable/zhaonongji"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_zhinan"
            android:text="找农活"
            android:layout_gravity="center"
            android:drawableTop="@drawable/zhinan"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_kefu"
            android:text="找农活"
            android:layout_gravity="center"
            android:drawableTop="@drawable/kefu"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:text="每日推荐"
        android:textColor="#2571ce"
        android:background="@color/boundary"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:id="@+id/progressBar"
        android:layout_weight="1.06"/>


</LinearLayout>